---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "You hate sales",
    description: "The thought of selling makes you feel pushy or inauthentic",
    icon: "vomit",
  },
  {
    title: "You feel like you're shouting into the void",
    description:
      "You have an incredible product or service, but can't seem to get people's attention.",
    icon: "megaphone",
  },
  {
    title: "Your clients are a nightmare",
    description:
      "You keep attracting the same nightmare clients who're making you dread work.",
    icon: "goblin",
  },
  {
    title: "Your strategy is :shrug:",
    description:
      "Your current marketing strategy consists of saying 'I know I should post more...'",
    icon: "shrug",
  },
  {
    title: "Your AI-powered copy is... off",
    description: "You use ChatGPT but it always feels impersonal or “off”",
    icon: "robot",
  },
  {
    title: "You're paralyzed by perfectionism",
    description:
      "Whenever you sit down to write an ad, an email, a [FILL IN THE BLANK].",
    icon: "frozen",
  },
  {
    title: "You're worried you don't stand out",
    description:
      "Your brand feels like it came from a template instead of the heart.",
    icon: "invisible",
  },
  {
    title: "You feel like somebody else",
    description:
      'You feel like you can\'t "just be yourself" — like you have to put on the "yoga instructor voice" to be a yoga instructor.',
    icon: "disguise",
  },
  {
    title: "You just need a roadmap",
    description:
      "You want to hire a copywriter, but don't want to rely on some rando from Upwork for your entire marketing strategy",
    icon: "map",
  },
];
---

<section class="bg-champagnepink py-12">
  <div class="flex flex-col items-center">
    <h2 class="font-larken font-extrabold text-darksteel text-4xl">
      Who Is Marketing For Humans For?
    </h2>
    <h3 class="mt-2 text-darksteel text-xl">This course is for you if...</h3>
    <div
      class="mt-6 grid max-w-6xl grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3"
    >
      {
        features.map(({ title, description, icon }) => (
          <div class="flex flex-col items-center justify-center gap-4 rounded-lg border border-default bg-offset p-6">
            <div class="size-16 rounded-full border-2 border-current p-3">
              <Icon name={icon} class="size-full" />
            </div>
            <div>
              <p class="text-center font-extrabold text-xl">{title}</p>
              <p class="text-center text-offset text-sm">{description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
